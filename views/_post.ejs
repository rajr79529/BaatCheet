<ul id="<%= post.id %>">
   <li>
      <%=post.content%> <%if (locals.user && post.user.id ==
      locals.user.id){%>
      <large>
         <a class="post_delete_icon" href="/posts/destroy/<%=post._id%>"
            >X</a
         >
      </large>
      <%}%>
   </li>
   <li><%=post.user.name%></li>
   <li><%=post.createdAt%></li>
   <%if(locals.user){%>
   <div class="comments_container">
      <form action="comments/create" method="post" id="comments_form">
         <input
            type="text"
            name="content"
            placeholder="Type a comment... "
            required
         />
         <input type="hidden" name="post" value="<%=post._id%>" />
         <input type="submit" value="comment" />
      </form>
   </div>
   <%}%>
   <br />
   <div class="comments_container">
      <ul id="comment_<%= post._id%>">
         <%for(comment of post.comments){%> <%-include('_comment')%> <%}%>
      </ul>
   </div>
   <hr />
</ul>
